{{else}}

{{/each}}
<h1>Editar Postagem :</h1>
<div class="card">
    <form action="/posts/edit" method="POST">
        <div class="card-body">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="name" class="mb-2">Titulo:</label>
            <input type="text" name="titulo" placeholder="Titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug" class="mt-2 mb-2">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="Slug" class="form-control" value="{{postagem.slug}}">
            <label for="slug" class="mt-2 mb-2">Descrição:</label>
            <input type="text" name="descricao" id="descricao" placeholder="Descrição" class="form-control" value="{{postagem.descricao}}">
            <label for="slug" class="mt-2 mb-2">Conteudo:</label>
            <textarea type="text" name="conteudo" id="conteudo" placeholder="Conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria" class="mt-2 mb-2">Categorias:</label>
            <select name="categoria" class="form-control custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria salva</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-2">Editar</button>
        </div>
    </form>
</div>