{{#each postagem}}
<div class="card">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <hr>
        <small>Criado em: {{data}}</small>
        <br>
        <a href="/postagem/{{slug}}">
            <button class="btn btn-success mt-2">Leia mais</button>
        </a>
    </div>
</div>
{{else}}
    <span>Nenhuma postagem</span>
{{/each}}